{
  "name": "tylercraft",
  "private": true,
  "workspaces": [
    "src/engine",
    "src/server",
    "src/web/client",
    "src/web/workers/terrain-generation",
    "src/world"
  ],
  "license": "MIT",
  "version": "1.0.7",
  "description": "TylerCraft, My version of a web based MineCraft",
  "author": "tylertracy1999@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tylerthecoder/TylerCraft"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "concurrently -n web,server,world \"yarn web dev\" \"yarn server dev\" \"yarn world dev\"",
    "engine": "yarn workspace @craft/engine",
    "web": "yarn workspace @craft/web-client",
    "server": "yarn workspace @craft/server",
    "terrain-worker": "yarn workspace @craft/terrain-gen-worker",
    "world": "yarn workspace @craft/rust-world"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "concurrently": "^7.5.0",
    "eslint": "^7.9.0",
    "npm-run-all": "4.1.5",
    "serve": "^11.3.2",
    "source-map-loader": "^4.0.1",
    "typescript": "^4.7.3"
  },
  "nodemonConfig": {
    "ignore": [
      "public/**/*",
      "worlds/**/*"
    ]
  },
  "packageManager": "yarn@3.2.1"
}
