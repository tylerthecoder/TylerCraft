{
  "name": "tylercraft",
  "license": "MIT",
  "version": "1.0.2",
  "description": "TylerCraft, My version of a web based MineCraft",
  "main": "dist/server/app.js",
  "types": "dist/server/app.d.ts",
  "author": "tylertracy1999@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tylerthecoder/TylerCraft"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev:server": "DOTENV_CONFIG_PATH=env/local.env npm-run-all --parallel wbuild:server wstart:server",
    "start:server": "node -r dotenv/config ./dist/server/server.js",
    "prod-start:server": "DOTENV_CONFIG_PATH=env/prod.env node -r dotenv/config ./dist/server/server.js",
    "wstart:server": "nodemon -r dotenv/config ./dist/server/server.js",
    "build:server": "DOTENV_CONFIG_PATH=env/local.env tsc -p ./app/server/tsconfig.json",
    "wbuild:server": "DOTENV_CONFIG_PATH=env/local.env tsc -w -p ./app/server/tsconfig.json",
    "dev:client": "DOTENV_CONFIG_PATH=env/local.env npm-run-all --parallel ",
    "build:client": "DOTENV_CONFIG_PATH=env/local.env webpack --config webpack.config.js",
    "wbuild:client": "webpack --watch --config webpack.config.js",
    "prepare": "npm run build:server && npm run build:client"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^6.0.0",
    "gl-matrix": "^3.0.0",
    "random": "^2.2.0",
    "seedrandom": "^3.0.5",
    "simplex-noise": "^2.4.0",
    "tumult": "^3.0.14",
    "ws": "^7.0.1"
  },
  "peerDependencies": {
    "express": "4.x",
    "mongodb": "3.x"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/gl-matrix": "^2.4.5",
    "@types/mongodb": "^3.5.27",
    "@types/random": "^2.1.1",
    "@types/seedrandom": "^2.4.28",
    "@types/ws": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "copy-webpack-plugin": "^5.0.3",
    "eslint": "^7.9.0",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "1.19.1",
    "npm-run-all": "4.1.5",
    "ts-loader": "^8.0.2",
    "typescript": "^4.0.2",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5"
  },
  "nodemonConfig": {
    "ignore": [
      "public/**/*",
      "worlds/**/*"
    ]
  }
}
