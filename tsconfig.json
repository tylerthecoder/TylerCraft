{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "esnext",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2019", "dom"]
  },
  "resolve": {
    "extensions": [".js", ".ts", ".glsl"] // Add extension if you want to raw-load without typing extension
  },
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
