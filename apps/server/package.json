{
	"name": "@craft/server",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"start": "bun run index.ts",
		"start:watch": "bun --watch run index.ts",
		"dev": "npm-run-all --parallel start:watch typecheck",
