{
	"name": "@craft/server",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"start": "node --experimental-modules --experimental-wasm-modules -r dotenv/config ./dist/server.js",
		"build": "tsc -b",
		"dev:build": "tsc -b -w",
		"nodemon": "nodemon",
		"buildAndRun": "yarn build && yarn start",
		"dev": "npm-run-all --parallel nodemon dev:build",
		"clean": "rm -rf ./dist"
	},
	"dependencies": {
		"@craft/engine": "1.0.0",
		"cors": "^2.8.5",
		"express": "^4.18.1",
		"mongodb": "^4.12.1",
		"ws": "^8.8.0"
	},
	"devDependencies": {
		"@craft/eslint-config-tylercraft": "^1.0.0",
		"@types/cors": "^2.8.9",
		"@types/express": "^4.17.7",
		"@types/mongodb": "^4.0.7",
		"@types/ws": "^8.5.3",
		"eslint": "^8.42.0",
		"nodemon": "1.19.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^4.9.5"
	}
}
